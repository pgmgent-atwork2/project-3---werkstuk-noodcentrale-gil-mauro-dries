    <script>
        function showTime(){
    let date = new Date();
    let h = date.getHours(); // 0 - 23
    let m = Math.round(date.getMinutes() / 2); // 0 - 59
    let s = date.getSeconds(); // 0 - 59
    

    m = (m < 10) ? "0" + m : m;
    s = (s < 10) ? "0" + s : s;
    
    let time = m + ":" + s + ' minuten';
    document.querySelector(".clock").innerText = time;
    document.querySelector(".clock").textContent = time;

    document.querySelector(".clock2").innerText = time;
    document.querySelector(".clock2").textContent = time;


    
    setTimeout(showTime, 1000);
    
}

showTime();
