<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/public/css/reset.css" />
    <link rel="stylesheet" href="/public/css/main.css"/>
    <link rel="stylesheet" href="/public/css/mediaQuerry.css"/>
    <title>Inloggen</title>
  </head>
  <body>
    {{>header/overall-header}}
    <main class="nietMedisch__dashboard">
        {{>sidebar/sidebar-medisch}}
        <section class="right__section">
             {{>header/dashboard-header}}
            <article>
                <h3 class="title__live">Collega's</h3>
                <ul class="liveLuisteren__list">
                    {{#each findUsers}}
                    <li>
                        <div>
                            <img src="{{meta.avatar}}" alt="telephone icon">
                        </div>
                        <p class="collega-firstname">{{meta.firstname}}  {{meta.lastname}}</p>
                        <p class="collega-email">{{email}}</p>
                        <p class="collega-gsm">{{meta.GSM}}</p>
                        <p class="collega-label">{{role.label}}</p>
                        <button><a href="/feedback">Beoordeel</a></button>
                    </li>
                    <hr>
                    {{/each}}
                </ul>
            </article>
        </section>

        
    </main>
  </body>
</html>