<form action='/add-user' method='post'>
  <label for='' class='Login__label'>Voornaam</label>
  <input
    placeholder='voornaam'
    name='firstname'
    class='Login__input'
    type='text'
  />
  <label for='' class='Login__label'>Achternaam</label>
  <input
    placeholder='achternaam'
    name='lastname'
    class='Login__input'
    type='text'
  />
  <label for='' class='Login__label'>*E-mail</label>
  <input placeholder='email' name='email' class='Login__input' type='text' />
  <label for='' class='Login__label'>Telefoon nr.</label>
  <input
    placeholder='Telefoon nr.'
    name='phone'
    class='Login__input'
    type='text'
  />
  <label for='' class='Login__label'>*Wachtwoord</label>
  <input
    placeholder='Wachtwoord'
    name='password'
    class='Login__input'
    type='password'
  />
  <label for='' class='Login__label'>*Rol</label>
  <select name='role' id='rol'>
    <option value='2'>Medische directeur</option>
    <option value='3'>Functionele directeur</option>
    <option value='4'>Ploegleiders</option>
    <option value='5'>Deskundige</option>
  </select>
</form>